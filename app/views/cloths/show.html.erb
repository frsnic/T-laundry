<div class="col-md-12 bottom-buffer">
  <div class="cloth">
    <% if policy(:group).group_manager? %>
      <%= link_to("Delete", group_cloth_path(@group, @cloth), class: "btn btn-danger pull-right", method: :delete, data: { confirm: "Are you sure?" } ) %>
      <%= link_to("Edit", edit_group_cloth_path(@group, @cloth), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>
  <h2><%= @cloth.title %></h2>
  <ul>
    <% @cloth.cloth_ways.each do |cloth_way| %>
      <li><%= cloth_way.title %>：<%= currency(cloth_way.price, @group.precision) %></li>
    <% end %>
  </ul>
</div>

<%= link_to('群組列表', account_groups_path, class: "btn btn-default") %>
