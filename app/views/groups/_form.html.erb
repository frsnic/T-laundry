<%= simple_form_for group do |f| %>
  <div class="form-group">
    <%= f.input :title,     input_html: { class: "form-control"}, autofocus: true, required: true %>
    <%= f.input :precision, input_html: { class: "form-control"}, required: true %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
