<div class="col-md-12">
  <div class="group">
    <% if policy(:group).admin? %>
      <%= link_to("New Group", new_group_path, class: "btn btn-success pull-right") %>
    <% end %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each_with_index do |group, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to(truncate(group.title, length: 15), group_path(group)) %></td>
          <td>
            <% if policy(:group).admin? %>
              <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-primary") %>
              <%= link_to("Delete", group_path(group),    class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } )%>
            <% end %>
            <% if policy(:group).group_manager? %>
              <%= link_to("New Store", new_group_store_path(group), class: "btn btn-sm btn-success")%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
