
<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Name</td>
        <td>Group</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <% index = 1 %>
        <% group.group_managers.each do |manager| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= manager.name %></td>
            <td><%= link_to(truncate(group.title, length: 15), group_path(group)) %></td>
            <td>
              <%# link_to("Edit", edit_group_user_path(user.group, user), class: "btn btn-sm btn-primary") %>
              <% if policy(:group).group_manager? %>
                <%# link_to("Delete", group_user_path(user.group, user), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } )%>
              <% end %>
            </td>
          </tr>
          <% index = index + 1 %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
